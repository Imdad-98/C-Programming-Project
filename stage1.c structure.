#include <stdio.h>
#include <string.h>

#define MAX_ITEMS 7
#define MAX_NAME_LEN 50

// Allowed calorie values
const int allowedCalories[] = {100, 150, 200, 250, 300};

// Food item structure
typedef struct {
    char name[MAX_NAME_LEN];
    int calories;
} FoodItem;

// Stack structure
typedef struct {
    FoodItem items[MAX_ITEMS];
    int top;
} FoodStack;

// Initialize stack
void initStack(FoodStack* s) {
    s->top = -1;
}

// Check if stack is full
int isFull(FoodStack* s) {
    return s->top >= MAX_ITEMS - 1;
}

// Push item onto stack
int push(FoodStack* s, FoodItem item) {
    if (isFull(s)) return 0;
    s->items[++(s->top)] = item;
    return 1;
}

// Check if a calorie value is allowed
int isValidCalorie(int cal) {
    for (int i = 0; i < 5; i++) {
        if (allowedCalories[i] == cal) return 1;
    }
    return 0;
}

// Display all food items in stack
void displayStack(FoodStack* s) {
    printf("\n=== ì˜¤ëŠ˜ì˜ ì‹ë‹¨ ê¸°ë¡ ===\n");
    for (int i = 0; i <= s->top; i++) {
        printf("%d. %s - %d kcal\n", i + 1, s->items[i].name, s->items[i].calories);
    }
}

// Function to input and store food items
int setMyDailyFood() {
    FoodStack stack;
    initStack(&stack);
    int totalCalories = 0;

    printf("\n[ ì‹ë‹¨ ê¸°ë¡ ì‹œì‘ - ìµœëŒ€ 7ê°œ í•­ëª© / 1500 kcal ì´í•˜ ]\n");

    while (!isFull(&stack)) {
        FoodItem item;
        int cal;

        printf("\nìŒì‹ ì´ë¦„ ì…ë ¥ (ë„ì–´ì“°ê¸° ì—†ì´): ");
        scanf("%s", item.name);

        printf("ì¹¼ë¡œë¦¬ ì…ë ¥ (100/150/200/250/300 ì¤‘ íƒ1): ");
        scanf("%d", &cal);

        if (!isValidCalorie(cal)) {
            printf("âŒ í—ˆìš©ë˜ì§€ ì•ŠëŠ” ì¹¼ë¡œë¦¬ ê°’ì…ë‹ˆë‹¤.\n");
            continue;
        }

        if (totalCalories + cal > 1500) {
            printf("âš ï¸ ì´ ì¹¼ë¡œë¦¬ê°€ 1500ì„ ì´ˆê³¼í•©ë‹ˆë‹¤. ì…ë ¥ ì¢…ë£Œ.\n");
            break;
        }

        item.calories = cal;

        if (push(&stack, item)) {
            totalCalories += cal;
            printf("âœ… ì €ì¥ë¨: %s (%d kcal)\n", item.name, cal);
        } else {
            printf("âŒ ìŠ¤íƒì´ ê°€ë“ ì°¼ìŠµë‹ˆë‹¤.\n");
            break;
        }
    }

    displayStack(&stack);
    printf("ğŸ”¢ ì˜¤ëŠ˜ ì„­ì·¨í•œ ì´ ì¹¼ë¡œë¦¬: %d kcal\n", totalCalories);
    return totalCalories;
}

// Example of a simplified menu
void showMenu() {
    int option;
    while (1) {
        printf("\n===== ë°€ë¦¬ì›¨ì´ì¦ˆ í›ˆë ¨ ì‹œìŠ¤í…œ =====\n");
        printf("1. [II. í›ˆë ¨ > 1. ì²´ë ¥ê³¼ ì§€ì‹ > G. ì‹ë‹¨ ê¸°ë¡]\n");
        printf("0. ì¢…ë£Œ\n");
        printf("ì„ íƒ: ");
        scanf("%d", &option);

        switch (option) {
            case 1:
                setMyDailyFood();
                break;
            case 0:
                printf("í”„ë¡œê·¸ë¨ì„ ì¢…ë£Œí•©ë‹ˆë‹¤.\n");
                return;
            default:
                printf("ì˜ëª»ëœ ì„ íƒì…ë‹ˆë‹¤.\n");
        }
    }
}

int main() {
    showMenu();
    return 0;
}
